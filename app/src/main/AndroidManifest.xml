<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.nexion.tchatroom" >

    <uses-feature
        android:name="android.hardware.bluetooth"
        android:required="true" />

    <uses-permission android:name="com.nexion.tchatroom.permission.C2D_MESSAGE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.ACCESS_DOWNLOAD_MANAGER"/>
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.nexion.beaconManagment.ActivityTestBeacon"
            android:label="@string/title_activity_activity_test_beacon" >
        </activity>
        <activity android:name="com.nexion.beaconManagment.Main2Activity" >
        </activity>

        <receiver
            android:name=".BluetoothReceiver"
            android:enabled="true"
            android:exported="false" >
            <intent-filter>
                <action android:name="android.bluetooth.adapter.action.STATE_CHANGED" />
            </intent-filter>
        </receiver>

        <service
            android:name=".ScanService"
            android:exported="false" >
        </service>

        <receiver
            android:name=".PushReceiver"
            android:enabled="true"
            android:permission="com.google.android.c2dm.permission.SEND"
            >

            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="com.nexion.tchatroom" />
            </intent-filter>
        </receiver>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyCS8QHl_gZTtQoFIdJ02RyUjs5_Vx47JV0" />

        <activity
            android:name=".activity.KickActivity"
            android:label="@string/title_activity_kick" />
        <activity
            android:name=".activity.ChatRoomActivity"
            android:label="@string/title_activity_chat_room" />
        <activity
            android:name=".activity.WaitingRoomActivity"
            android:label="@string/title_activity_waiting_room" />
        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".PushService"
            android:exported="false" >
        </service>
    </application>

</manifest>
