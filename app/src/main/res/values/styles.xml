<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="ActionBtn">
        <item name="android:background">@drawable/button</item>
        <item name="android:paddingTop">12dip</item>
        <item name="android:paddingBottom">12dip</item>
        <item name="android:layout_marginLeft">12dip</item>
        <item name="android:layout_marginRight">12dip</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Pseudo">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextTitle" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Date">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">italic</item>
    </style>
</resources>
